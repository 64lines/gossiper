{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "jasmine": true
    },
    "rules": {
        // whitespaces
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "comma-spacing": "error",
        "func-call-spacing": "error",
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1,
                "FunctionExpression": {
                    "parameters": "first"
                },
                "FunctionDeclaration": {
                    "parameters": "first"
                },
                "MemberExpression": 2
            }
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "keyword-spacing": "error",
        "no-mixed-spaces-and-tabs": "error",
        "no-multi-spaces": "error",
        "no-regex-spaces": "error",
        "no-trailing-spaces": "error",
        "no-whitespace-before-property": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "semi-spacing": "error",
        "space-before-blocks": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never"
            }
        ],
        "space-in-parens": [
            "error",
            "never"
        ],
        "space-infix-ops": "error",
        "space-unary-ops": [
            "error",
            {
                "nonwords": false
            }
        ],
        "spaced-comment": [
            "error",
            "always",
            {
                "exceptions": [
                    "="
                ]
            }
        ],
        "switch-colon-spacing": "error",
        // line-breaks
        "dot-location": [
            "error",
            "property"
        ],
        "eol-last": "error",
        "lines-around-comment": [
            "error",
            {
                "beforeBlockComment": true,
                "allowBlockStart": true
            }
        ],
        "operator-linebreak": [
            "error",
            "before",
            {
                "overrides": {
                    "=": "after",
                    "+=": "after",
                    "?": "after"
                }
            }
        ],
        "object-property-newline": [
            "error",
            {
                "allowAllPropertiesOnSameLine": true
            }
        ],
        "no-multiple-empty-lines": "error",
        "object-curly-newline": [
            "error",
            {
                "multiline": true,
                "consistent": true
            }
        ],
        "padded-blocks": [
            "error",
            "never"
        ],
        "brace-style": "error",
        // other custom rules
        "camelcase": "error",
        "comma-style": "error",
        "curly": "error",
        "max-len": [
            "error",
            120
        ],
        "new-cap": "error",
        "no-new": "error",
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-prototype-builtins": "off",
        "no-multi-str": "error",
        "quotes": [
            "error",
            "single"
        ],
        "quote-props": [
            "error",
            "as-needed"
        ],
        "wrap-iife": "error",
        "semi": "error"
    }
}