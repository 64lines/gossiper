html
  head
    title=title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous")
    script(src="https://https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")
    link(rel="stylesheet" href="/css/gossiper.css" type="text/css" crossorigin="anonymous")
  body
    div(id="container")
      div(class="py-5 text-center")
        img(class="d-block mx-auto mb-4" src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/76/Favicon_Framasoft.svg/800px-Favicon_Framasoft.svg.png" alt="" width="72" height="72")
        h2=title
        p(class="lead")=description
        div(class="text-center mx-5 px-5 my-5 search-bar")
            div(class="form-label-group")
            input(type="search" id="search" class="form-control" placeholder="Search" required="" autofocus="")
        div(class="posts-container mx-5 px-5 my-5" id="content")
            p=loadingMessage
            img(src='https://media.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif')
    script(src="/js/gossiper.js")